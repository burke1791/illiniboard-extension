{
  "name": "IlliniBoard",
  "version": "0.0.1",
  "description": "Keeps you up to date on all things",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "*://*.illiniboard.com/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "illiniboard",
    "default_popup": "illiniboard.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.illiniboard.com/*"],
      "js": ["illiniboard.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}