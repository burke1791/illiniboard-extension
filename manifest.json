{
  "name": "IlliniBoard",
  "version": "0.0.1",
  "description": "Keeps you up to date on all things",
  "default_locale": "en",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "webRequest",
    "*://*.illiniboard.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.illiniboard.com/*"],
      "js": ["illiniboard.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}