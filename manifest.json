{
  "name": "IlliniBoard",
  "version": "0.0.1",
  "description": "Keeps you up to date on Illiniboard.com articles",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "*://*.illiniboard.com/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "illiniboard",
    "default_popup": "illiniboard.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.illiniboard.com/story/*"],
      "js": ["illiniboardContent.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}